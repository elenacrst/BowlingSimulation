<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="11"
    android:background="@color/colorPrimary"
    tools:context="com.example.elena.bowlingsimulation.MainActivity">
    <android.support.v4.widget.Space
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp" />
    <Button
        android:onClick="onPlayClick"
        android:id="@+id/button_play"
        android:layout_weight="2"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent"
        android:text = "@string/button_play"
        android:layout_width="150dp"
        android:layout_height="0dp" />
    <ImageView
        android:layout_weight="3"
        android:layout_marginTop="20dp"
        android:src="@drawable/start_image"
        android:layout_gravity="center_horizontal"
        android:layout_width="150dp"
        android:layout_height="0dp" />
    <Button
        android:onClick="onInstructionClick"
        android:id="@+id/button_instructions"
        android:layout_weight="2"
        android:textSize="20sp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:background="@color/colorAccent"
        android:text = "@string/button_instructions"
        android:layout_width="150dp"
        android:layout_height="0dp" />
    <android.support.v4.widget.Space
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp" />

</LinearLayout>
